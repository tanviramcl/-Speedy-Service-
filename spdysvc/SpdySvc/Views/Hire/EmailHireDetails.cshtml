@using SpdySvc.Models;
@using SpdySvc.Models.SpdyMembershipUser;
@{
    List<OrderDetails> oderDetails = (List<OrderDetails>)ViewBag.OrderDetailsList;
}



<section class="content-header">
    <h1>
        Hire Details
    </h1>
</section>
<section class="content">
    <div class="box">
        <div class="box-body">
    <form style="margin:2%">
        <input type="hidden" id="hdnId" value="@oderDetails[0].OrderId" />
        <div class="form-group" style="margin-left:20%">
            <label id="lblMsg"></label>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Hire Reference</label>
            <input class="form-control" type="text" value="@oderDetails[0].OrderId" placeholder="" readonly>

        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Hire Status</label>
            <input class="form-control" type="text" value="@oderDetails[0].OrderStatus" placeholder="" readonly>
        </div>
           <div class="form-group">
            <label for="exampleInputEmail1">Hire Limit </label>
            <input class="form-control" type="text" value="@oderDetails[0].HireLimit" placeholder="" readonly>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Requester</label>
            <input class="form-control" type="text" value="" placeholder="@oderDetails[0].FirstName" readonly>
        </div>

        <div class="form-group">
            <label class="examplehire-on">Hire ON</label>
            <input type="text" class="form-control" id="d1" name="date" value="@oderDetails[0].OnHireDate" readonly />
            
        </div>
        <div class="form-group">
            <label class="examplehire-off-on ">Hire Off On</label>
            <input type="text" class="form-control" id="d2" name="date" value="@oderDetails[0].OffHireDate" readonly />
        </div>
    </form>
    <table class="table table-hover">
        <thead>
            <tr>

                <th>ProductCode</th>
                <th>ProductName</th>
                <th>Quantity</th>
                <th>Total Cost</th>
                <th></th>
            </tr>
        </thead>
        @{
            foreach (OrderDetails trDt in oderDetails)
            {
                
                <tr>
                    <td>@trDt.ProductCode </td>
                    <td>@trDt.ProductName </td>
                    <td>@trDt.Quantity </td>
                    <td>@trDt.TotalHireCost </td>
  
                </tr>
            }
        }
    </table>
            </div>
        </div>
    </section>


