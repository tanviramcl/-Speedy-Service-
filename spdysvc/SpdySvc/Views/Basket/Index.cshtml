@{
    Layout = "~/Views/Shared/_Layout1column.cshtml";
}

<div class="row">
    <div class="col-sm-8 col-lg-8 col-md-8">
        <div class="basket-item">
            <h1>Hire Items</h1>
            @if (ViewBag.cartItems!=null && ViewBag.cartItems.Count != 0)
            {
                <table class="table table-bordered dataTable">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Product Code</th>
                            <th>Qty</th>
                            <th>Unit Price</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.cartItems)
                        {
                            string Img = "";
                            if (item.Logo == "")
                            {
                                Img = "42-06-h.JPG.ashx.jpg";
                            }
                            else
                            {
                                Img = item.Logo;
                            }
                            int qty = Convert.ToInt32(item.Quantity);
                            //int id = Convert.ToInt32(item.ITEM_ID);
                            String id = item.ITEM_ID;
                        
                            <tr>
                                <td>
                                    <div class="button-remove"><a href="/basket/remove/@id"><img src="~/Images/button-remove.png" /></a></div>
                                    <div class="thume-image">
                                        <a href="/category/product/@id"><img title="" alt="" src="~/Images/@Img"></a>
</div>
                                    <div class="product-name"><a href="/category/product/@id">@item.ProductName</a></div>                                   
                                    <div >On Hire Date : @item.FromDate <br/>
                                        Off Hire Date :@item.ToDate
                                    </div>

                                </td>
                                <td>@item.ProductCode</td>
                                <td>
                                    <input type="text" value="@item.Quantity" maxlength="3" class="quantity" name="qty" id="qty_@id" />
                                </td>
                                <td class="price">£@item.Price/day</td>
                                <td class="price" id="totalprice_@id">£@item.TotalPrice</td>                                
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <p>Your Basket is empty!</p>
            }
        </div>
    </div>

    <div class="col-sm-4 col-lg-4 col-md-4">
@if (ViewBag.cartItems!=null && ViewBag.cartItems.Count != 0)
            {
        <div class="panel panel-default order">
            <div class="panel-heading">
                <h3 class="panel-title">Basket Totals</h3>
            </div>
            <div class="panel-body">                
                <div class="summary-area">
                    <table>
                        <tbody>
                            <tr>
                                <th>Total Hire Value:</th>
                                <td>£<span id="TotalHireValueLabel">0</span></td>
                            </tr>
                            <tr>
                                <th>Total Sales Value:</th>
                                <td>£<span id="TotalSalesValueLabel">0</span></td>
                            </tr>
                            <tr>
                                <th>Total Speedy Shield:</th>
                                <td>£<span id="TotalSpeedyShieldLabel">0</span></td>
                            </tr>
                            <tr>
                                <th>Total VAT:</th>
                                <td>£<span id="TotalVATLabel">0</span></td>
                            </tr>
                            <tr class="grand-total">
                                <th>Total Cost:</th>
                                <td>£<span id="TotalCostLabel">0</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="panel-footer">
                <button type="button">Checkout</button>
            </div>
        </div>
    }

    </div>
</div>
<script src="~/Scripts/Basket.js" type="text/javascript"></script>