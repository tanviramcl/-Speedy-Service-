<style type="text/css" class="init">
    
</style>
<script src="~/Scripts/jquery.js"></script>
<script type="text/javascript" language="javascript" src="~/Scripts/HireView.js"></script>

<script src="~/Scripts/jquery.dataTables.min.js"></script>
