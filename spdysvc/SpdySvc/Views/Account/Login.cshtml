@{
    ViewBag.Title = "Log in";
    ViewBag.ReturnUrl = ViewBag.ReturnUrl;
    Layout = "~/Views/Shared/_Layout1column.cshtml";
}

<div class="login-box">
    <div class="login-box-body">        
        <form id="regForm">
            <div class="alert alert-danger" role="alert" id="warNing" style="display:none;"></div>
            <div class="alert alert-danger" role="alert" id="lblMsg" style="display:none;"></div>
            <div><label id="warNing" style="color:red"> </label></div>
            <div class="form-group has-feedback">
                <label for="username">Email </label>
                <input type="text" class="form-control" name="userName" id="userName" placeholder="User name">               
            </div>
            <div class="form-group has-feedback">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password">                
            </div>
            <div class="row">
                <div class="col-xs-8">                    
                </div>                
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div><!-- /.col -->
               <div class="col-xs-8">
                    @Html.ActionLink("Forgotten Password", "ForgottenPassword", "Account")
                </div>
            </div>
        </form>        
    </div>
</div>
<script src="~/Scripts/CustomLogin.js"></script>
