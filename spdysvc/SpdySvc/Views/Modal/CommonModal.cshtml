@{
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1" runat="server">
    <title></title>
    <style type="text/css">
        .btn-blue {
            background-color: #0296de;
            border: medium none;
            border-radius: 9px;
            box-shadow: 4px 4px 5px rgba(0, 0, 0, 0.25);
            color: #fff;
            padding: 1px 15px 2px;
            position: relative;
            top: -3px;
        }

            .btn-blue:hover {
                background: none repeat scroll 0 0 #009900;
            }
    </style>
</head>
<body>
    <div class="modal-header">
        <button type="button" class="close" style="margin-right: -29px; margin-top: -18px; opacity: 1;" data-dismiss="modal">
            <span aria-hidden="true">
                <img src="../Images/close.png" width="23" height="23" alt="close window" />
            </span><span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title"></h4>
    </div>
    <div class="modal-body">
        <iframe id="modalIframe" title="Pharmacy Search Tool" src="@ViewBag.URL" frameborder="0"
                style="overflow: auto; width: 100%; background-color: White; height: 458px;"></iframe>
        <div class="modal-footer">
            <button type="button" class="btn btn-blue" style="margin-right: 45%" data-dismiss="modal">Close Window</button>
        </div>
    </div>
    <script type="text/javascript">
        $('body').on('hidden.bs.modal', '.modal', function () {
            $(this).removeData('bs.modal');
            window.location.reload();
        });
    </script>
</body>
</html>

